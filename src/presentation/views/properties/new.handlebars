<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Add New Property</h1>
</div>

<form action="/properties" method="POST">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center">
                        <i class="bi bi-info-circle me-2"></i> Basic Information
                    </h5>
                    
                    <div class="mb-3">
                        <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="title" name="title" value="{{property.title}}" placeholder="Enter a descriptive title" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="description" name="description" rows="5" placeholder="Describe your property" required>{{property.description}}</textarea>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="propertyType" class="form-label">Property Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="propertyType" name="propertyType" required>
                                <option value="">Select a type</option>
                                {{#each propertyTypes}}
                                <option value="{{this}}" {{#if (eq ../property.propertyType this)}}selected{{/if}}>{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="ownerId" class="form-label">Owner ID <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="ownerId" name="ownerId" value="{{property.ownerId}}" placeholder="Enter owner ID" required>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="pricePerNight" class="form-label">Price Per Night ($) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="pricePerNight" name="pricePerNight" value="{{property.pricePerNight}}" placeholder="0.00" min="1" step="0.01" required>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="maxGuests" class="form-label">Max Guests <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-people"></i></span>
                                <input type="number" class="form-control" id="maxGuests" name="maxGuests" value="{{property.maxGuests}}" placeholder="1" min="1" required>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center">
                        <i class="bi bi-geo-alt me-2"></i> Location
                    </h5>
                    
                    <div class="mb-3">
                        <label for="addressLine1" class="form-label">Address</label>
                        <input type="text" class="form-control" id="addressLine1" name="addressLine1" value="{{property.addressLine1}}" placeholder="Street address">
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" name="city" value="{{property.city}}" placeholder="City">
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label for="postalCode" class="form-label">Postal Code</label>
                            <input type="text" class="form-control" id="postalCode" name="postalCode" value="{{property.postalCode}}" placeholder="Postal code">
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" id="country" name="country" value="{{property.country}}" placeholder="Country">
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center">
                        <i class="bi bi-stars me-2"></i> Amenities
                    </h5>
                    
                    <div class="mb-3">
                        <label for="amenities" class="form-label">Amenities (comma-separated)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tags"></i></span>
                            <input type="text" class="form-control" id="amenities" name="amenities" value="{{property.amenities}}" placeholder="WiFi, Pool, Kitchen, etc.">
                        </div>
                        <div class="form-text">Enter amenities separated by commas (e.g., WiFi, Pool, Kitchen)</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card" style="position: sticky; top: 1rem;">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center">
                        <i class="bi bi-check-circle me-2"></i> Submit
                    </h5>
                    <p class="text-muted">Fields marked with <span class="text-danger">*</span> are required.</p>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-building-add"></i> Create Property
                        </button>
                    </div>
                    
                    <div class="mt-3">
                        <a href="/properties" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form> 