                        </form>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function addAmenity(amenity) {
        const input = document.getElementById('amenities');
        const currentValue = input.value.trim();
        
        if (currentValue === '') {
            input.value = amenity;
        } else {
            // Check if amenity already exists
            const amenities = currentValue.split(',').map(a => a.trim());
            if (!amenities.includes(amenity)) {
                input.value = currentValue + ', ' + amenity;
            }
        }
    }
</script> 