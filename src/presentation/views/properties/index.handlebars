<h1 class="mb-4">Available Properties</h1>

<div class="row">
    {{#if properties.length}}
        {{#each properties}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {{#if photos.[0]}}
                    <img src="{{photos.[0].imageUrl}}" class="property-image" alt="{{title}}">
                    {{else}}
                    <div class="property-image" style="background-color: #f3f4f6; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-house" style="font-size: 2rem; color: #9ca3af;"></i>
                    </div>
                    {{/if}}
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title mb-0">{{title}}</h5>
                            <span class="badge bg-info">{{propertyType}}</span>
                        </div>
                        
                        <p class="card-text" style="height: 4.8em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                            {{description}}
                        </p>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span style="font-weight: 600; color: var(--primary);">${{pricePerNight}}</span>
                            <span class="text-muted">Max guests: {{maxGuests}}</span>
                        </div>
                        
                        {{#if city}}
                        <p class="card-text text-muted mb-3" style="font-size: 0.875rem;">
                            <i class="bi bi-geo-alt"></i> {{city}}, {{country}}
                        </p>
                        {{/if}}
                        
                        {{#if amenities.length}}
                        <div class="mb-3">
                            {{#each amenities}}
                                <span class="badge bg-info amenity-badge">{{this}}</span>
                            {{/each}}
                        </div>
                        {{/if}}
                        
                        <div class="d-flex justify-content-between mt-3">
                            <a href="/properties/{{propertyId}}" class="btn btn-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a href="/properties/{{propertyId}}/edit" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No properties available yet. 
                <a href="/properties/new" class="alert-link">Add your first property</a>.
            </div>
        </div>
    {{/if}}
</div>

<div class="text-center mt-4">
    <a href="/properties/new" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Property
    </a>
</div> 